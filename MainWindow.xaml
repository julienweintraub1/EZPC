<ui:FluentWindow x:Class="EZPC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="EZPC"
        Width="820"
        Height="680"
        MinWidth="600"
        MinHeight="500"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="EZPC" ShowMaximize="True" ShowMinimize="True"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="32,16,32,32">
                
                <!-- Header -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="EZPC" FontSize="28" FontWeight="SemiBold"/>
                        <TextBlock x:Name="StatusText" Text="Scanning..." FontSize="12" Opacity="0.5"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:Button x:Name="CopyButton" ToolTip="Copy specs to clipboard" Padding="8" Margin="0,0,6,0" Click="CopyButton_Click">
                            <ui:Button.Icon><ui:SymbolIcon Symbol="Copy24"/></ui:Button.Icon>
                        </ui:Button>
                        <ui:Button x:Name="RefreshButton" ToolTip="Rescan" Padding="8" Click="RefreshButton_Click">
                            <ui:Button.Icon><ui:SymbolIcon Symbol="ArrowClockwise24"/></ui:Button.Icon>
                        </ui:Button>
                    </StackPanel>
                </Grid>

                <!-- System Specs Section -->
                <TextBlock Text="SYSTEM SPECS" FontSize="12" FontWeight="SemiBold" Opacity="0.5" Margin="0,0,0,10"/>
                
                <!-- Row 1: CPU and GPU -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Background="{DynamicResource ControlFillColorDefaultBrush}" CornerRadius="6" Padding="12">
                        <StackPanel>
                            <TextBlock Text="CPU" FontSize="11" Opacity="0.5" Margin="0,0,0,4"/>
                            <TextBlock x:Name="CpuSpecText" Text="..." FontSize="13" FontWeight="Medium" TextWrapping="Wrap"/>
                            <TextBlock x:Name="CpuCoresText" Text="" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Grid.Column="2" Background="{DynamicResource ControlFillColorDefaultBrush}" CornerRadius="6" Padding="12">
                        <StackPanel>
                            <TextBlock Text="GPU" FontSize="11" Opacity="0.5" Margin="0,0,0,4"/>
                            <TextBlock x:Name="GpuSpecText" Text="..." FontSize="13" FontWeight="Medium" TextWrapping="Wrap"/>
                            <TextBlock x:Name="GpuDriverText" Text="" FontSize="11" Opacity="0.6" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Row 2: RAM and Storage -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Background="{DynamicResource ControlFillColorDefaultBrush}" CornerRadius="6" Padding="12">
                        <StackPanel>
                            <TextBlock Text="RAM" FontSize="11" Opacity="0.5" Margin="0,0,0,4"/>
                            <TextBlock x:Name="RamSpecText" Text="..." FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Grid.Column="2" Background="{DynamicResource ControlFillColorDefaultBrush}" CornerRadius="6" Padding="12">
                        <StackPanel>
                            <TextBlock Text="STORAGE" FontSize="11" Opacity="0.5" Margin="0,0,0,4"/>
                            <TextBlock x:Name="StorageSpecText" Text="..." FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Recommendations Section -->
                <TextBlock Text="RECOMMENDATIONS" FontSize="12" FontWeight="SemiBold" Opacity="0.5" Margin="0,0,0,10"/>
                <StackPanel x:Name="ComponentsPanel"/>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>