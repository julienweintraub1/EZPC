<Window x:Class="EZPC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EZPC - PC Health Check" 
        Height="650" 
        Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="EZPC System Scanner" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"/>
            <TextBlock Text="Check your PC specs and update status" 
                       FontSize="14" 
                       Foreground="#7F8C8D"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Scan Button -->
        <Button Grid.Row="1" 
                x:Name="ScanButton"
                Content="Scan System" 
                Height="50" 
                FontSize="18"
                FontWeight="SemiBold"
                Background="#3498DB"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                Click="ScanButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8"
                                        Padding="20,10">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2980B9"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Tab Control -->
        <TabControl Grid.Row="2" 
                    x:Name="MainTabs"
                    Margin="0,20,0,0"
                    Background="Transparent"
                    BorderThickness="0">

            <!-- System Specs Tab -->
            <TabItem Header="System Specs" FontSize="14" FontWeight="SemiBold">
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="SpecsText" 
                                   FontFamily="Consolas"
                                   FontSize="13"
                                   TextWrapping="Wrap"
                                   Foreground="#2C3E50"
                                   Text="Click 'Scan System' to begin..."/>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <!-- Updates Tab -->
            <TabItem Header="Updates &amp; Recommendations" FontSize="14" FontWeight="SemiBold">
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="UpdatesPanel">
                            <TextBlock Text="Run a scan to check for updates..." 
                                       FontSize="14"
                                       Foreground="#7F8C8D"
                                       TextAlignment="Center"
                                       Margin="0,50,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <TextBlock Grid.Row="3" 
                   x:Name="StatusText"
                   Text="Ready" 
                   Foreground="#7F8C8D"
                   FontSize="12"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>